
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/css/StyleSheet.css?ver=1" rel="stylesheet" type="text/css" />

    <script type="text/javascript">
        //FUNÇÃO MASCARA CADASTRO
        function formatar(mascara, documento) {
            var i = documento.value.length;
            var saida = mascara.substring(0, 1);
            var texto = mascara.substring(i)

            if (texto.substring(0, 1) != saida) {
                documento.value += texto.substring(0, 1);
            }
        }
    </script>

    <title>Alterar Contato</title>
</head>
<body>
    <div class="container">
        <form method="post">
            <div class="row">
                <div class="col-lg-12">
                    <img src="~/imagens/estabelecimento.png" class="img-responsive center-block" />
                    <div class="apresentacao">
                        <p>Detalhes do estabelecimento</p>
                    </div>
                </div>
                <div class="col-lg-8">
                    <div class="form-group">
                        <label for="email">E-mail</label>
                        <input id="email" name="email" class="form-control TamanhoInput" type="text" value="@(ViewBag.Contato.Email)" />
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-2">
                    <div class="form-group">
                        <label for="ddd">DDD</label>
                        <input class="form-control" id="ddd" name="ddd" type="text" value="@(ViewBag.Contato.DDD)"  maxlength="2" />
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        <label for="telefone">Telefone</label>
                        <input class="form-control" id="telefone" name="telefone" type="text" value="@(ViewBag.Contato.Numero)" maxlength="9" onkeyup="formatar('####-####', this)" />
                        <input name="id_Estabelecimento" type="text" value="@(ViewBag.Contato.id_Estabelecimento)" hidden="hidden"/>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="form-group col-lg-4">
                    <button class="btn btn-success" onclick="~/Contato/AlterarContato/@(ViewBag.Contato.idContato)">Alterar</button>
                    <a href="/Estabelecimento/DetalhesEstabelecimento/@(ViewBag.Contato.id_Estabelecimento)"><button type="button" class="btn btn-warning">Voltar</button></a>
                </div>
            </div>
        </form>
    </div>
</body>
</html>
